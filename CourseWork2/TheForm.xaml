<Window x:Class="CourseWork2.TheForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2"
        mc:Ignorable="d"
       Title="TheForm" Height="450" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Loaded="Window_Loaded" x:Name="TheFormBlank">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <StackPanel>

           

           

            <TextBlock Margin="5,5,5,0"  Background="Transparent" Foreground="Red" FontSize="10" Opacity="1" FontWeight="Black" FontStretch="Condensed" Text="Экскурсовод" TextWrapping="Wrap"   />
            <ComboBox 
x:Name="cbEmployee" 

SelectedValue="{Binding Path=IdсотрудникаNavigation}"

Margin="5,0,5,5" 
Background="Transparent" 
Foreground="Red"/>

            <TextBlock Margin="5,5,5,0"  Background="Transparent" Foreground="Red" FontSize="10" Opacity="1" FontWeight="Black" FontStretch="Condensed" Text="Выставка" TextWrapping="Wrap"   />
            <ComboBox Margin="5,0,5,5" Background="Transparent" Foreground="Red" x:Name="cbTema" VerticalAlignment="Center" SelectedItem="{Binding Path=КодВыставкиNavigation}" />

            <TextBlock Margin="5,5,5,0"   Background="Transparent" Foreground="Red"  FontSize="10" Opacity="1" FontWeight="Black" FontStretch="Condensed" Text="Количество людей" TextWrapping="Wrap"   />
            <TextBox Margin="5,0,5,5" Background="Transparent" Foreground="Red" TextWrapping="Wrap" x:Name="tbKol" Text="{Binding Path=КоличествоЛюдей}" />

            <TextBlock Margin="5,5,5,0"   Background="Transparent" Foreground="Red"  FontSize="10" Opacity="1" FontWeight="Black" FontStretch="Condensed" Text="Продолжительность" TextWrapping="Wrap"   />
            <TextBox Margin="5,0,5,5" Background="Transparent" Foreground="Red" TextWrapping="Wrap" x:Name="tbDuration" Text="{Binding Path=Продолжительность}" />


            

            <TextBlock Margin="5,5,5,0"   Background="Transparent" Foreground="Red"  FontSize="10" Opacity="1" FontWeight="Black" FontStretch="Condensed" Text="Стоимость экспоната" TextWrapping="Wrap"   />
            <TextBox Margin="5,0,5,5" Background="Transparent" Foreground="Red" TextWrapping="Wrap" x:Name="tbCoust" Text="{Binding Path=Стоимость}" />




           







        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="130,0,130,0">
                <Button Content="Добавить" Width="100" Height="30"  x:Name="btnFormAdd"  Click="btnFormAdd_Click" Background="Transparent" Foreground="red"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Width="100" Height="30" Content="Отмена"  Click="btnCancel_Click" Background="Transparent" Foreground="Red"/>
            </StackPanel>


        </StackPanel>
    </Grid>
</Window>

