<Window x:Class="CourseWork2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2"
        mc:Ignorable="d"
               Title="MainWindow"  x:Name="mainWindow" Height="800" Width="1100" Loaded="Windows_Loaded" WindowStartupLocation="CenterScreen"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="488*"/>
            <RowDefinition Height="259*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" VerticalAlignment="Top" Background="#03261C" Foreground="#388AC8"  BorderBrush="#1533AD" Grid.ColumnSpan="2" >
            <MenuItem Header="Файл" Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD">
                <MenuItem Header="Выйти" Click="btnExit_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD"/>
            </MenuItem>
            <MenuItem Header="Действия"  Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD">
                <MenuItem   Header="Добавить запись" Click="btnAddEntry_Click"  Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD" OpacityMask="#FFE61616"/>
                <MenuItem   Header="Редактировать запись" Click="btnEdit_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD"/>
                <MenuItem   Header="Удалить запись" Click="btnDelete_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD"/>
                <MenuItem   Header="Посмотреть запись" Click="btnView_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD"/>

            </MenuItem>
            <MenuItem Header="Справка" Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD">
                <MenuItem Header="О программе" Click="btnInfo_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD"/>
                <MenuItem Header="Разработчик" Click="btnDeveloper_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#1533AD"/>
            </MenuItem>
        </Menu>

        <DataGrid x:Name="DGDataBase" Grid.Row="1" IsReadOnly="True"  AutoGenerateColumns="False" Foreground="#FF6F00" HeadersVisibility="Column" GridLinesVisibility="All" RowBackground="#8403E7"  AlternatingRowBackground="#E7003E" HorizontalGridLinesBrush="#00D7FF"  VerticalGridLinesBrush="#FFEB40" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ИнвентарныйНомер}" Header="Номер экстпоната" x:Name="dgtcNum" />
                <DataGridTextColumn Binding="{Binding НазваниеЭкспоната}" Header="Название" />
                <DataGridTextColumn Binding="{Binding КодВыставкиNavigation.Тематика}" Header="Название" />
                <DataGridTextColumn Binding="{Binding КодПоставкиNavigation.СпособПолучения}" Header="Стоимость заказа"  x:Name="dgtСreceiving"/>
                <DataGridTextColumn Binding="{Binding Стоимость}" Header="Стоимость" x:Name="dgtcCost" />
                <DataGridTextColumn Binding="{Binding Подлиность}" Header="Телефон" x:Name="dgtcAuthenticity"/>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="	#F83EAB"/>
                    <Setter Property="Foreground" Value="#1B0297"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#A020F0" Offset="0.0" />

                    <GradientStop Color="#800080" Offset="0.5" />

                    <GradientStop Color="#483D8B" Offset="1.0" />

                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>


        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1"  >
            <Button Height="30" Width="160" VerticalAlignment="Top" Margin="20" Content="Добавить запись" x:Name="btnADD" Click="btnAddEntry_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#FF7DE8E8"/>
            <Button Height="30" Width="160" VerticalAlignment="Top" Margin="20" Content="Редактировать запись" x:Name="btnEdit" Click="btnEdit_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#FF7DE8E8"/>

            <Button Height="30" Width="160" VerticalAlignment="Top" Margin="20" Content="Удалить запись" x:Name="btnDelete" Click="btnDelete_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#FF7DE8E8"/>
            <Button Height="30" Width="160" VerticalAlignment="Top" Margin="20" Content="Посмотреть" x:Name="btnView" Click="btnView_Click" Background="#03261C" Foreground="#388AC8" BorderBrush="#FF7DE8E8"/>
        </StackPanel>
    </Grid>
</Window>

